                                    },
                                    "currency_name": {
                                        "description": "Post method.",
                                        "type": "string"
                                    },
                                    "currency_code": {
                                        "description": "Post method.",
                                        "type": "string"
                                    },
                                    "currency_symbol": {
                                        "description": "Post method.",
                                        "type": "string"
                                    },
                                    "conv_rate": {
                                        "description": "Post method.",
                                        "type": "number",
                                        "format": "float"
                                    }
                                },
                                "type": "object"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "basicAuth": {
                "type": "http",
                "in": "header",
                "scheme": "basic"
            },
            "ApiKeyAuth": {
                "type": "apiKey",
                "description": "Webservice api key",
                "name": "X-API-KEY",
                "in": "header"
            }
        }
