<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
		 backupStaticAttributes="false"
		 colors="true"
		 processIsolation="false"
		 stopOnFailure="true"
		 syntaxCheck="true"
		 printerClass="YtResultPrinter"
		 printerFile="tests/printer.php"
		 bootstrap="tests/bootstrap.php">
	<testsuites>
		<testsuite name="Init">
			<directory suffix=".php">./tests/init/</directory>
		</testsuite>
		<testsuite name="Base">
			<directory suffix=".php">./tests/base/</directory>
		</testsuite>
		<testsuite name="Settings">
			<directory suffix=".php">./tests/settings/</directory>
		</testsuite>
		<testsuite name="Gui">
			<directory suffix=".php">./tests/gui/</directory>
		</testsuite>
		<testsuite name="Finish">
			<directory suffix=".php">./tests/finish/</directory>
		</testsuite>
	</testsuites>
	<filter>
		<whitelist processUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">.</directory>
		</whitelist>
	</filter>
	<listeners>
		<listener class="Times" file="./tests/times.php" />
	</listeners>
	<logging>
		<log type="coverage-html" target="./coverageHtml/" title="YetiForce coverage" yui="true" highlight="true" lowUpperBound="35" highLowerBound="70" charset="UTF-8" />
		<log type="coverage-clover" target="coverage.xml"/>
	</logging>
</phpunit>
